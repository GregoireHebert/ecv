{% extends 'base.html.twig' %}

{% block body %}
    <p>Tentatives restantes : {{ app.session.get('tenta') }}</p>
    <p>{{ mot }}</p>
    <div>
        {% for letter in 'A'..'Z' %}
            <a href="{{ path('test_letter', {letter: letter}) }}">{{ letter }}</a>&nbsp;
        {% endfor %}
    </div>

    <form action="{{ path('test_mot') }}" method="POST">
        <input type="word" name="word">
        <input type="submit" name="submit" value="tester le mot">
    </form>
{% endblock %}
